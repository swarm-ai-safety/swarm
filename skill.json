{
  "name": "swarm-safety",
  "version": "1.5.0",
  "description": "SWARM: System-Wide Assessment of Risk in Multi-agent systems. Simulate multi-agent dynamics with 38 agent types and 29 governance levers. Study emergent risks, phase transitions, and the governance cost paradox using soft probabilistic labels.",
  "homepage": "https://github.com/swarm-ai-safety/swarm",
  "repository": "https://github.com/swarm-ai-safety/swarm",
  "api_base": "https://github.com/swarm-ai-safety/swarm",
  "category": "safety",
  "author": "Raeli Savitt",
  "license": "MIT",
  "keywords": [
    "multi-agent",
    "ai-safety",
    "distributional-safety",
    "governance",
    "emergence",
    "red-teaming",
    "phase-transitions",
    "decision-theory",
    "adverse-selection"
  ],
  "capabilities": [
    "simulate",
    "governance",
    "metrics",
    "red-team",
    "scenarios",
    "framework-bridges",
    "decision-theory",
    "sweep"
  ],
  "install": {
    "pip": "pip install swarm-safety",
    "source": "pip install -e \".[dev,runtime]\"",
    "with_api": "pip install swarm-safety[api]",
    "with_llm": "pip install swarm-safety[llm]",
    "with_all": "pip install swarm-safety[all]"
  },
  "cli": {
    "list_scenarios": "swarm list",
    "run_scenario": "swarm run scenarios/{name}.yaml",
    "run_with_overrides": "swarm run scenarios/{name}.yaml --seed 42 --epochs 20"
  },
  "api": {
    "base_url": "http://localhost:8000",
    "docs": "http://localhost:8000/docs",
    "openapi": "http://localhost:8000/openapi.json",
    "endpoints": {
      "health": "GET /health",
      "register_agent": "POST /api/v1/agents/register",
      "get_agent": "GET /api/v1/agents/{agent_id}",
      "list_agents": "GET /api/v1/agents/",
      "submit_scenario": "POST /api/v1/scenarios/submit",
      "get_scenario": "GET /api/v1/scenarios/{scenario_id}",
      "list_scenarios": "GET /api/v1/scenarios/",
      "create_simulation": "POST /api/v1/simulations/create",
      "join_simulation": "POST /api/v1/simulations/{simulation_id}/join",
      "get_simulation": "GET /api/v1/simulations/{simulation_id}",
      "list_simulations": "GET /api/v1/simulations/"
    }
  },
  "agent_types": [
    "honest",
    "opportunistic",
    "deceptive",
    "adversarial",
    "ldt",
    "rlm",
    "council",
    "skill_rl",
    "llm_anthropic",
    "llm_openai",
    "llm_ollama",
    "moltbook",
    "scholar",
    "wiki_editor"
  ],
  "governance_levers": [
    "transaction_tax",
    "reputation_decay",
    "circuit_breaker",
    "random_audit",
    "staking",
    "collusion_detection",
    "security",
    "sybil_detection",
    "transparency",
    "moderator",
    "incoherence_friction",
    "council_deliberation",
    "diversity_enforcement",
    "moltipedia_pair_cap",
    "moltipedia_page_cooldown",
    "moltipedia_daily_cap",
    "moltipedia_no_self_fix"
  ],
  "metrics": [
    "toxicity_rate",
    "quality_gap",
    "conditional_loss",
    "incoherence",
    "illusion_delta"
  ],
  "framework_bridges": [
    "concordia",
    "gastown",
    "claude_code",
    "live_swe",
    "openclaw",
    "prime_intellect",
    "ralph",
    "worktree"
  ],
  "stats": {
    "scenarios": 55,
    "agent_modules": 38,
    "governance_levers": 29,
    "tests": 2922,
    "papers": 20
  },
  "scenarios": [
