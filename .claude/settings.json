{
  "permissions": {
    "allow": [
      "Bash(ruff:*)",
      "Bash(mypy:*)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(bash .claude/hooks/scan_secrets.sh:*)",
      "Bash(ls:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/post_write_check.sh",
            "timeout": 15,
            "statusMessage": "Running post-write checks"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/post_write_check.sh",
            "timeout": 15,
            "statusMessage": "Running post-write checks"
          }
        ]
      }
    ]
  }
}
