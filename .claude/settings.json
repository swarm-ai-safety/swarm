{
  "permissions": {
    "allow": [
      "Bash(ruff:*)",
      "Bash(mypy:*)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(bash .claude/hooks/scan_secrets.sh:*)",
      "Bash(ls:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/post_write_secrets_check.sh",
            "timeout": 10,
            "statusMessage": "Scanning for secrets"
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/post_write_gitignore_check.sh",
            "timeout": 10,
            "statusMessage": "Checking gitignore coverage"
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/post_write_lint_check.sh",
            "timeout": 15,
            "statusMessage": "Linting Python file"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/post_write_secrets_check.sh",
            "timeout": 10,
            "statusMessage": "Scanning for secrets"
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/post_write_gitignore_check.sh",
            "timeout": 10,
            "statusMessage": "Checking gitignore coverage"
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/post_write_lint_check.sh",
            "timeout": 15,
            "statusMessage": "Linting Python file"
          }
        ]
      }
    ]
  }
}
