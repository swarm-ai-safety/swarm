{
  "description": "Expected memory usage per agent type. Tests fail if actual usage exceeds baseline by >20%",
  "version": "1.0",
  "baselines": {
    "CrewBackedAgent": {
      "max_mb_1000_epochs": 200,
      "description": "CrewBackedAgent with deliberation history over 1000 epochs"
    },
    "LLMAgent": {
      "max_mb_1000_exchanges": 50,
      "description": "LLMAgent with audit log enabled, 1000 exchanges"
    },
    "LDTAgent": {
      "max_mb_100_peers": 100,
      "description": "LDTAgent with 100+ peer interactions"
    },
    "RLMAgent": {
      "max_mb_memory_budget_100": 150,
      "description": "RLMAgent with memory_budget=100 counterparty models"
    },
    "BaseAgent": {
      "max_mb_base": 50,
      "description": "BaseAgent with standard memory and interaction history"
    },
    "AdaptiveAdversary": {
      "max_mb_tracking_sets": 75,
      "description": "AdaptiveAdversary with full tracking sets"
    }
  },
  "critical_tests": {
    "test_crewbackedagent_deliberation_history_bounded": {
      "max_memory_mb": 200,
      "max_time_seconds": 120,
      "priority": "CRITICAL"
    },
    "test_llmagent_audit_log_entries_bounded": {
      "max_memory_mb": 100,
      "max_time_seconds": 60,
      "priority": "CRITICAL"
    },
    "test_ldtagent_cache_invalidation": {
      "max_memory_mb": 150,
      "max_time_seconds": 60,
      "priority": "HIGH"
    },
    "test_rlmagent_counterparty_models_eviction": {
      "max_memory_mb": 200,
      "max_time_seconds": 120,
      "priority": "HIGH"
    },
    "test_memory_usage_bounded_in_long_run": {
      "max_memory_mb": 200,
      "max_time_seconds": 180,
      "priority": "HIGH"
    },
    "test_mixed_agent_population_memory_stable": {
      "max_memory_mb": 500,
      "max_time_seconds": 300,
      "priority": "MEDIUM"
    },
    "test_long_run_memory_plateau": {
      "max_memory_mb": 1024,
      "max_time_seconds": 600,
      "priority": "MEDIUM"
    }
  },
  "alert_threshold_percent": 20,
  "notes": [
    "Memory measurements are for RSS (Resident Set Size)",
    "All baselines assume Python 3.10-3.12 on Linux x86_64",
    "Tests should run in isolated containers with cgroup limits",
    "Baselines may need adjustment based on actual workload patterns"
  ]
}
